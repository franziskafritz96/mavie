<?xml version='1.0' encoding='utf-8'?>
<widget id="de.hsechs.franziska" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <preference name="phonegap-version" value="cli-7.1.0" /> <!-- <intelxdk:cordova-cli version="6.2.0"/> -->

    
    <name>mavie</name>
    <description>
        
    </description>
    <author email="mail@franziskafritz.at" href="http://franziskafritz.at">
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
   <plugin name="cordova-plugin-statusbar" spec="2.2.3" />

    
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

<preference name="prerendered-icon" value="true" />


<preference name="SplashScreenDelay" value="0" />

    
    
<!-- ab hier PLattformabhängig Einstellungen für Eure App -->    
<platform name="android">

  <preference name="Fullscreen" value="true" />

  <application android:hardwareAccelerated="true" />
  <activity android:launchMode="singleTask" />


  <preference name="SplashMaintainAspectRatio" value="false" />
  <preference name="SplashShowOnlyFirstTime" value="true" />


  <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/ldpi.png" />
  <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/mdpi.png" />
  <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/hdpi.png" />
  <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/xhdpi.png" />
  <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icon/android/xxhdpi.png" />
  <icon gap:platform="android" gap:qualifier="fr-xxhdpi" src="res/icon/android/fr-xxhdpi.png" />

</platform>


    <!-- aber hier iOS und so -->
    
<platform name="ios">

  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="FadeSplashScreen" value="false"/>
  <preference name="FadeSplashScreenDuration" value="0"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarBackgroundColor" value="#000000"/>
  <preference name="StatusBarStyle" value="lightcontent"/>


  <gap:config-file platform="ios" parent="UIStatusBarHidden">
      <true/>
  </gap:config-file>

  <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
      <false/>
  </gap:config-file>


</platform>


<plugin name="cordova-plugin-crosswalk-webview" source="npm" spec="2.3.0" />
 <preference name="xwalkMultipleApk" value="true" />
 <plugin name="cordova-build-architecture" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.1" source="git" />


<preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect --ignore-gpu-blacklist"/>

<config-file platform="android" parent="/manifest/application" mode="merge">
    <activity android:launchMode="singleTop" />
</config-file>


<gap:splash src="splash.png" />
<gap:splash gap:platform="ios" height="480" src="res/screen/ios/Default.png" width="320" />
<gap:splash gap:platform="ios" height="960" src="res/screen/ios/Default@2x.png" width="640" />
<gap:splash gap:platform="ios" height="1136" src="res/screen/ios/Default-568h@2x.png" width="640" />
<gap:splash gap:platform="ios" height="1334" src="res/screen/ios/Default-667h@2x.png" width="750" />
<gap:splash gap:platform="ios" height="2208" src="res/screen/ios/Default-Portrait-736h@3x.png" width="1242" />
<gap:splash gap:platform="ios" height="1242" src="res/screen/ios/Default-Landscape-736h@3x.png" width="2208" />

<icon gap:platform="ios" height="180" src="res/icon/ios/icon-60@3x.png" width="180" />
<icon gap:platform="ios" height="60" src="res/icon/ios/icon-60.png" width="60" />
<icon gap:platform="ios" height="120" src="res/icon/ios/icon-120.png" width="120" />
<icon gap:platform="ios" height="120" src="res/icon/ios/icon-60@2x.png" width="120" />
<icon gap:platform="ios" height="76" src="res/icon/ios/icon-76.png" width="76" />
<icon gap:platform="ios" height="152" src="res/icon/ios/icon-76@2x.png" width="152" />
<icon gap:platform="ios" height="29" src="res/icon/ios/icon-small.png" width="29" />
<icon gap:platform="ios" height="58" src="res/icon/ios/icon-small@2x.png" width="58" />
<icon gap:platform="ios" height="40" src="res/icon/ios/icon-40.png" width="40" />
<icon gap:platform="ios" height="80" src="res/icon/ios/icon-40@2x.png" width="80" />
<icon gap:platform="ios" height="57" src="res/icon/ios/icon-57.png" width="57" />






</widget>
